@model IEnumerable<Hotel_Reservation_Menager.Models.Clients>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Users List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Clients" asp-action="CreateClient" class="btn btn-primary">
                Add New User
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                        Email Address
                    </th>
                    <th>
                        Adult
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Id</td>
                        <td width="50%">@obj.FirstName</td>
                        <td width="50%">@obj.LastName</td>
                        <td width="50%">@obj.PhoneNumber</td>
                        <td width="50%">@obj.Email</td>
                        @if (obj.IsAdult == true)
                        {
                        <td width="50%">adult</td>
                        }
                        else
                        { 
                        <td width="50%">young</td>
                        }
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-controller="Clients" asp-route-Id="@obj.Id" asp-action="ClientReservation" class="btn btn-primary mx-2">
                                Reservation
                            </a>
                            <a asp-controller="Clients" asp-route-Id="@obj.Id" asp-action="ClientHistory" class="btn btn-danger mx-2">
                                History
                            </a>
                            <a asp-controller="Clients" asp-route-Id="@obj.Id" asp-action="EditClient" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="Clients" asp-route-Id="@obj.Id" asp-action="DeleteClient" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <div class="col-6 text-right">
        <a asp-controller="Home" asp-action="Admin" class="btn btn-danger">
            Back
        </a>
    </div>
</div>
