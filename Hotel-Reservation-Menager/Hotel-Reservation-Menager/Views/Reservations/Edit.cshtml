@model Hotel_Reservation_Menager.Models.Reservations

<h2>Delete Reservation</h2>

<p>Are you sure you want to delete this reservation?</p>

<dl class="row">
    <dt class="col-sm-2">
        Room Id
    </dt>
    <dd class="col-sm-10">
        @Model.RoomId
    </dd>
    <dt class="col-sm-2">
        User Id
    </dt>
    <dd class="col-sm-10">
        @Model.UserId
    </dd>
    <dt class="col-sm-2">
        Check In
    </dt>
    <dd class="col-sm-10">
        @Model.Accommodation
    </dd>
    <dt class="col-sm-2">
        Check Out
    </dt>
    <dd class="col-sm-10">
        @Model.Exemption
    </dd>
    <dt class="col-sm-2">
        Breakfast
    </dt>
    <dd class="col-sm-10">
        @Model.IsBreakfast
    </dd>
    <dt class="col-sm-2">
        All Inclusive
    </dt>
    <dd class="col-sm-10">
        @Model.IsAllInclusive
    </dd>
    <dt class="col-sm-2">
        Price
    </dt>
    <dd class="col-sm-10">
        @Model.Price
    </dd>
</dl>



<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </div>
</form>

