@model Hotel_Reservation_Menager.Models.Reservations

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Reservation</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                <input asp-for="RoomId" class="form-control" />
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accommodation" class="control-label"></label>
                <input asp-for="Accommodation" class="form-control" />
                <span asp-validation-for="Accommodation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exemption" class="control-label"></label>
                <input asp-for="Exemption" class="form-control" />
                <span asp-validation-for="Exemption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsBreakfast" class="control-label"></label>
                <input asp-for="IsBreakfast" class="form-control" />
                <span asp-validation-for="IsBreakfast" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsAllInclusive" class="control-label"></label>
                <input asp-for="IsAllInclusive" class="form-control" />
                <span asp-validation-for="IsAllInclusive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
