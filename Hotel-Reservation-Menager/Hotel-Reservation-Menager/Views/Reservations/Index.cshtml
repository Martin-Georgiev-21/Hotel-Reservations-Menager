@model IEnumerable<Hotel_Reservation_Menager.Models.Reservations>

<h1>Reservations</h1>

<p>
    <a asp-action="Create">Create New</a>
    
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Room Number
            </th>
            <th>
                User
            </th>
            <th>
                Clients
            </th>
            <th>
                Accommodation
            </th>
            <th>
                Exemption
            </th>
            <th>
                Breakfast
            </th>
            <th>
                AllInclusive
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">@obj.RoomId</td>
                <td width="50%">@obj.UserId</td>
                <td width="50%">@foreach (var client in obj.ListOfClients)
                {<p>@client.FirstName</p>}</td>
                <td width="50%">@obj.Accommodation</td>
                <td width="50%">@obj.Exemption</td>
                <td width="50%">@obj.IsBreakfast</td>
                <td width="50%">@obj.IsAllInclusive</td>
                <td width="50%">@obj.Price</td>
                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Users" asp-route-Id="@obj.UserId" asp-action="EditUser">
                            Edit
                        </a> |

                        <a asp-controller="Users" asp-route-Id="@obj.UserId" asp-action="DeleteUser">
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="col-6 text-right">
    <a asp-controller="Home" asp-action="Back" class="btn btn-danger">
        Back
    </a>
</div>
