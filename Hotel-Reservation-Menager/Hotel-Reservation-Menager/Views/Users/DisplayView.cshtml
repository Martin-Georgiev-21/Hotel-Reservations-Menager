@model IEnumerable<Hotel_Reservation_Menager.Models.Users>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Users List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Users" asp-action="CreateUser" class="btn btn-primary">
                Create New User
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Middle Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Username
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        EGN
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                        Hire Date
                    </th>
                    <th>
                        Termination Date
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    if (obj.UserId != 1)
                    {
                <tr>
                    <td width="50%">@obj.UserId</td>
                    <td width="50%">@obj.FirstName</td>
                    <td width="50%">@obj.MiddleName</td>
                    <td width="50%">@obj.LastName</td>
                    <td width="50%">@obj.Username</td>
                    <td width="50%">@obj.Email</td>
                    <td width="50%">@obj.Egn</td>
                    <td width="50%">@obj.PhoneNumber</td>
                    <td width="50%">@obj.HireDate</td>
                    @if (obj.TerminationDate == null)
                    {
                        <td width="50%">No Termination Date</td>
                    }
                    else
                    {
                        <td width="50%">@obj.TerminationDate</td>
                    }
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Users" asp-route-Id="@obj.UserId" asp-action="EditUser" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="Users" asp-route-Id="@obj.UserId" asp-action="DeleteUser" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                    }
                }
            </tbody>
        </table>
    }
    <div class="col-6 text-right">
        <a asp-controller="Home" asp-action="DisplayView" class="btn btn-danger">
            Back
        </a>
    </div>
</div>

