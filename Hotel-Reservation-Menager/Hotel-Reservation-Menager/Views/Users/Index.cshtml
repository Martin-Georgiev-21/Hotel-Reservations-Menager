@model List<Hotel_Reservation_Menager.Models.Users>


<h2>Users Table</h2>
    <a asp-controller="Users" asp-action="CreateUser">
        Create New User
    </a>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                @Html.ActionLink("First Name", "Index", new { sortOrder = "FirstName",clicked = ViewBag.Clicked, page = ViewBag.Page, pageSize = ViewBag.PageSize })
            </th>
            <th>
                @Html.ActionLink("Middle Name", "Index", new { sortOrder = "MiddleName",clicked = ViewBag.Clicked, page = ViewBag.Page, pageSize = ViewBag.PageSize })
            </th>
            <th>
                @Html.ActionLink("Last Name", "Index", new { sortOrder = "LastName",clicked = ViewBag.Clicked, page = ViewBag.Page, pageSize = ViewBag.PageSize })
            </th>
            <th>
                @Html.ActionLink("Username", "Index", new { sortOrder = "Username", clicked = ViewBag.Clicked, page = ViewBag.Page, pageSize = ViewBag.PageSize })
            </th>
            <th>
                @Html.ActionLink("Email", "Index", new { sortOrder = "Email", clicked = ViewBag.Clicked, page=ViewBag.Page, pageSize = ViewBag.PageSize })
            </th>
            <th>
                EGN
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Hire Date
            </th>
            <th>
                Termination Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            if (obj.UserId != 1)
            {
                <tr>
                    <td width="50%">@obj.UserId</td>
                    <td width="50%">@obj.FirstName</td>
                    <td width="50%">@obj.MiddleName</td>
                    <td width="50%">@obj.LastName</td>
                    <td width="50%">@obj.Username</td>
                    <td width="50%">@obj.Email</td>
                    <td width="50%">@obj.Egn</td>
                    <td width="50%">@obj.PhoneNumber</td>
                    <td width="50%">@obj.HireDate</td>
                    @if (obj.TerminationDate == null)
                    {
                        <td width="50%">No Termination Date</td>
                    }
                    else
                    {
                        <td width="50%">@obj.TerminationDate</td>
                    }
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Users" asp-route-Id="@obj.UserId" asp-action="EditUser">
                                Edit
                            </a> |
                            
                            <a asp-controller="Users" asp-route-Id="@obj.UserId" asp-action="DeleteUser">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
            else
            {
                <tr>
                    <td width="50%">@obj.UserId</td>
                    <td width="50%">@obj.FirstName</td>
                    <td width="50%">@obj.MiddleName</td>
                    <td width="50%">@obj.LastName</td>
                    <td width="50%">@obj.Username</td>
                    <td width="50%">@obj.Email</td>
                    <td width="50%">@obj.Egn</td>
                    <td width="50%">@obj.PhoneNumber</td>
                    <td width="50%">@obj.HireDate</td>
                    @if (obj.TerminationDate == null)
                    {
                        <td width="50%">No Termination Date</td>
                    }
                    else
                    {
                        <td width="50%">@obj.TerminationDate</td>
                    }
                </tr>
            }

        }
    </tbody>
</table>

<div class="pagination">
    <ul>
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <div style="display:inline-block">
                <p @(i == ViewBag.Page ? "class=active" : "")>
                    <a href="/Users?sortOrder=@ViewBag.SortOrder&clicked=@ViewBag.CurrentClicked&page=@i&pageSize=@ViewBag.PageSize">@i</a>
                </p>
            </div>
        }
    </ul>
</div>

<form asp-controller="Users" asp-action="Index" method="get">
    <div class="form-group">
        <label for="pageSize">Page Size:</label>
        @if (ViewBag.PageSize == 3)
        {
            <select id="pageSize" name="pageSize" class="form-control" onchange="this.form.submit()">
                <option selected="selected" value="3" href=@(ViewBag.PageSize == 3 ? "selected" : "" )>3</option>
                <option value="6" href=@(ViewBag.PageSize == 6 ? "selected" : "" )>6</option>
                <option value="9" href=@(ViewBag.PageSize == 9 ? "selected" : "" )>9</option>
            </select>
        }
        else if (ViewBag.PageSize == 6)
        {
            <select id="pageSize" name="pageSize" class="form-control" onchange="this.form.submit()">
                <option value="3" href=@(ViewBag.PageSize == 3 ? "selected" : "" )>3</option>
                <option selected="selected" value="6" href=@(ViewBag.PageSize == 6 ? "selected" : "" )>6</option>
                <option value="9" href=@(ViewBag.PageSize == 9 ? "selected" : "" )>9</option>
            </select>
        }
        else
        {
            <select id="pageSize" name="pageSize" class="form-control" onchange="this.form.submit()">
                <option value="3" href=@(ViewBag.PageSize == 3 ? "selected" : "" )>3</option>
                <option value="6" href=@(ViewBag.PageSize == 6 ? "selected" : "" )>6</option>
                <option selected="selected" value="9" href=@(ViewBag.PageSize == 9 ? "selected" : "" )>9</option>
            </select>
        }
    </div>
</form>


